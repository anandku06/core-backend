{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "es6",
    "target": "es6",
    "lib": ["ES6", "DOM"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    // ðŸŸ¢ FIX STARTS HERE
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // remove or comment this â†“ since it conflicts with ESM interop
    // "verbatimModuleSyntax": true
    // ðŸŸ¢ FIX ENDS HERE
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/"]
}
